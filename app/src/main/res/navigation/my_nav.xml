<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/dayFragment">

    <fragment
        android:id="@+id/dayFragment"
        android:name="com.mihaelmarjanovic.dailylog23.fragments.DayFragment"
        android:label="Day"
        tools:layout="@layout/fragment_day" >
        <action
            android:id="@+id/action_dayFragment_to_addLog"
            app:destination="@id/addLog" />
    </fragment>
    <fragment
        android:id="@+id/goalsFragment"
        android:name="com.mihaelmarjanovic.dailylog23.fragments.GoalsFragment"
        android:label="Goals"
        tools:layout="@layout/fragment_goals" />
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.mihaelmarjanovic.dailylog23.fragments.CalendarFragment"
        android:label="Calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.mihaelmarjanovic.dailylog23.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <activity
        android:id="@+id/addLog"
        android:name="com.mihaelmarjanovic.dailylog23.AddLog"
        android:label="activity_add_log"
        tools:layout="@layout/activity_add_log" />
</navigation>